{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "strict": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "lib": ["es2015"],
        "skipLibCheck": true,
        "outDir": "./build",
        "rootDir": "./",
        "rootDirs": ["./app", "./test"]
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "app/**/*",
        "test/**/*"
    ]
}
